@using HMPSW.DAL
@using HMPSW.Controllers
@{ 
    ApplicationDbContext cdb = new ApplicationDbContext();
    List<Category> cats = cdb.Category.ToList();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HomeMakers</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top navbar container">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HomeMakers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                
                  <li class="dropdown"> 
                        <a class="dropdown-toggle" href="#" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Categories<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu"  aria-labelledby="dropdownMenu1">
                            @foreach (Category categ in cats)
                            {
                                <li>@Html.ActionLink(categ.Description, "Index", new { controller = "Posts", id = categ.ID })
                            </li>
                            }
                            <li class="divider"></li>
                            <li>@Html.ActionLink("All Categories", "Index", "Categories")</li>
                        </ul>
                    </li>
                

                    <li>@Html.ActionLink("Communities", "Index", "Communities")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </form>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <div class="container">
            <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - the HomeMakers Team</p>
                </footer>
            </div>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
