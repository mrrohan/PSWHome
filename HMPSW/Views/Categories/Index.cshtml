@model IEnumerable<HMPSW.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("admin"))
    {   @Html.ActionLink("Create New", "Create")}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><!-- link para post controller que envia ID da categoria para a action index-->
                @Html.ActionLink(@item.Description, "Index", new { Controller = "Posts", id = item.ID })
            </td><!-- /Post/Index/?Cat_ID-->
            <td>
                @if (User.IsInRole("admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }
            </td>
        </tr>
                }

</table>
